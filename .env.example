# AI-CORE Environment Configuration Template
# Copy this file to .env and configure with your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Application Host and Port Configuration
API_GATEWAY_HOST=localhost
API_GATEWAY_PORT=8080
MCP_MANAGER_PORT=8081
INTENT_PARSER_PORT=8082
FRONTEND_PORT=3000

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/aicore
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI AGENTS PLATFORM CONFIGURATION
# =============================================================================

# OpenAI Agents SDK Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
OPENAI_ORGANIZATION_ID=your_openai_org_id_here

# Temporal.io Workflow Configuration
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=ai-agents-queue
TEMPORAL_WORKFLOW_TIMEOUT=3600
TEMPORAL_ACTIVITY_TIMEOUT=600

# MCP (Model Context Protocol) Configuration
MCP_ENABLED=true
MCP_PROTOCOL_VERSION=1.0
MCP_MAX_CONTEXT_SIZE=8192
MCP_CACHE_TTL=3600
MCP_COMPRESSION_ENABLED=true

# A2A (Agent-to-Agent) Communication Configuration
A2A_ENABLED=true
A2A_DISCOVERY_SERVICE=redis
A2A_MESSAGE_QUEUE=redis
A2A_HEARTBEAT_INTERVAL=30
A2A_MAX_AGENTS=100
A2A_COMMUNICATION_TIMEOUT=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRATION=86400
JWT_ISSUER=ai-core-platform

# API Security
API_RATE_LIMIT=1000
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
API_MAX_REQUEST_SIZE=10485760

# Agent Security
AGENT_ENCRYPTION_KEY=your_agent_encryption_key_here
AGENT_AUTH_REQUIRED=true
AGENT_SANDBOX_ENABLED=true

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/ai-core.log
LOG_MAX_SIZE=100MB
LOG_RETENTION_DAYS=30

# Monitoring and Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
TELEMETRY_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Distributed Tracing
JAEGER_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# AGENT WORKFLOW CONFIGURATION
# =============================================================================

# Agent Execution Limits
MAX_CONCURRENT_AGENTS=50
AGENT_EXECUTION_TIMEOUT=300
AGENT_MEMORY_LIMIT=512MB
AGENT_CPU_LIMIT=1.0

# Workflow Configuration
WORKFLOW_RETRY_ATTEMPTS=3
WORKFLOW_BACKOFF_MULTIPLIER=2
WORKFLOW_MAX_HISTORY_SIZE=1000

# Agent Communication
AGENT_MESSAGE_BUFFER_SIZE=1000
AGENT_BROADCAST_ENABLED=true
AGENT_DISCOVERY_TIMEOUT=10

# =============================================================================
# EXTERNAL SERVICES INTEGRATION
# =============================================================================

# GitHub Integration (optional)
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# Slack Integration (optional)
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@netadx.ai

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
DEBUG=true
HOT_RELOAD=true
AUTO_MIGRATION=true

# Development Tools
RUST_BACKTRACE=1
RUST_LOG=debug
NODE_ENV=development

# Testing Configuration
TEST_DATABASE_URL=postgresql://localhost:5432/aicore_test
TEST_REDIS_URL=redis://localhost:6379/1
INTEGRATION_TESTS_ENABLED=true

# =============================================================================
# PRODUCTION SETTINGS (Override in production)
# =============================================================================

# Production Security (uncomment and configure for production)
# FORCE_HTTPS=true
# SECURE_COOKIES=true
# CSP_ENABLED=true
# RATE_LIMITING_STRICT=true

# Production Performance
# MAX_CONNECTIONS=1000
# CONNECTION_POOL_SIZE=20
# CACHE_TTL=3600

# Production Monitoring
# ERROR_REPORTING_DSN=your_sentry_dsn_here
# ANALYTICS_ENABLED=true
# AUDIT_LOGGING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Platform Features
FEATURE_MULTI_AGENT_WORKFLOWS=true
FEATURE_TEMPORAL_WORKFLOWS=true
FEATURE_MCP_PROTOCOL=true
FEATURE_A2A_COMMUNICATION=true
FEATURE_AGENT_MARKETPLACE=false
FEATURE_ENTERPRISE_FEATURES=false

# UI Features
FEATURE_AGENT_DASHBOARD=true
FEATURE_WORKFLOW_VISUALIZER=true
FEATURE_REAL_TIME_MONITORING=true
FEATURE_DARK_MODE=true

# =============================================================================
# NOTES
# =============================================================================

# 1. NEVER commit the actual .env file to version control
# 2. Keep this .env.example file updated with new configuration options
# 3. Use strong, unique values for all secrets in production
# 4. Consider using a secrets management service for production deployments
# 5. Validate all environment variables on application startup
# 6. Use different values for development, staging, and production environments

# For more information, see: https://docs.netadx.ai/configuration
