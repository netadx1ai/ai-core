# Intent Parser Service Configuration

# Server Configuration
INTENT_PARSER_HOST=127.0.0.1
INTENT_PARSER_PORT=8081
ENVIRONMENT=development
LOG_LEVEL=debug

# LLM Provider Configuration
LLM_PROVIDER=openai
LLM_API_KEY=your_openai_api_key_here
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_MODEL=gpt-4-1106-preview
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1
LLM_TIMEOUT_SECONDS=120
LLM_MAX_RETRIES=3

# Alternative LLM Provider (Anthropic)
# LLM_PROVIDER=anthropic
# LLM_API_KEY=your_anthropic_api_key_here
# LLM_API_URL=https://api.anthropic.com/v1/messages
# LLM_MODEL=claude-3-5-sonnet-20241022

# Fallback LLM Configuration
LLM_FALLBACK_PROVIDER=anthropic
LLM_FALLBACK_MODEL=claude-3-5-sonnet-20241022

# Azure OpenAI Configuration (if using Azure)
# LLM_PROVIDER=azure
# LLM_API_KEY=your_azure_api_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name
# AZURE_OPENAI_API_VERSION=2024-02-01

# Database Configuration
DATABASE_URL=postgresql://ai_core:password@localhost:5432/ai_core
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5
DB_ACQUIRE_TIMEOUT_SECONDS=30
DB_IDLE_TIMEOUT_SECONDS=600
DB_MAX_LIFETIME_SECONDS=3600

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379
REDIS_MAX_CONNECTIONS=10
REDIS_CONNECTION_TIMEOUT_SECONDS=10
REDIS_COMMAND_TIMEOUT_SECONDS=5
REDIS_RETRY_ATTEMPTS=3

# Service Configuration
MAX_BATCH_SIZE=50
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=300
CACHE_TTL_SECONDS=3600

# Metrics Configuration
METRICS_ENABLED=true
METRICS_ENDPOINT=http://localhost:9091
METRICS_PUSH_INTERVAL_SECONDS=60
METRICS_JOB_NAME=intent-parser-service
METRICS_INSTANCE=localhost:8081

# Security Configuration (if needed)
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External Service URLs
API_GATEWAY_URL=http://localhost:8080
MCP_MANAGER_URL=http://localhost:8082
FEDERATION_SERVICE_URL=http://localhost:8083

# Development/Testing Configuration
RUST_LOG=intent_parser=debug,tower_http=debug
RUST_BACKTRACE=1

# Production Configuration Override Examples
# ENVIRONMENT=production
# INTENT_PARSER_HOST=0.0.0.0
# LOG_LEVEL=info
# DATABASE_URL=postgresql://user:password@db-host:5432/ai_core_prod
# REDIS_URL=redis://redis-host:6379
